                if (previewTab) previewTab.classList.add('active');
            }

            rawTab?.addEventListener('click', showRaw);
            previewTab?.addEventListener('click', showPreview);

            async function updatePreview(){
                if (!rawEl || !previewEl) return;
                const text = rawEl.value || '';
                try {
                    const tokenEl = document.querySelector('input[name="__RequestVerificationToken"]');
                    const token = tokenEl ? tokenEl.value : '';
                    const resp = await fetch(window.location.pathname + '?handler=GenerateMarkdown', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                        body: JSON.stringify({ Text: text })
                    });

                    if (!resp.ok) throw new Error('Failed');
                    const html = await resp.text();
                    previewEl.innerHTML = html || '';
                } catch {
                    previewEl.textContent = '(error)';
                }
            }

            rawEl?.addEventListener('input', () => {
                window.clearTimeout(debounceTimer);
                debounceTimer = window.setTimeout(() => updatePreview(), debounceAmount);
            });

            updatePreview();
        })();
    </script>
}
