@page
@model InventoryManagement.Pages.Inventory.CreateModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Create Inventory"].Value;
}

<h1>@Localizer["Create Inventory"]</h1>
<h4 id="stepTitle">@Localizer["Inventory"]</h4>

<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data" id="inventoryForm">
