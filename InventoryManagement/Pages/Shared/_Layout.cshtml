@using System.Globalization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagement</title>
    <script>
        // Initialize theme early to avoid flash of incorrect theme
        (() => {
            const storedTheme = localStorage.getItem('theme');
            const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
            const theme = storedTheme || (prefersDark ? 'dark' : 'light');
            document.documentElement.setAttribute('data-bs-theme', theme);
        })();
    </script>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagement.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-body-tertiary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Inventory/Index">InventoryManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center w-100">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Inventory/Index">@Localizer["Inventories"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Users/Index">@Localizer["Users"]</a>
                        </li>
                    </ul>

                    <!-- Center search -->
                    <div class="flex-grow-1 d-flex justify-content-center px-3">
                        <div class="position-relative" style="min-width:280px; max-width:520px; width:100%">
                            <form id="global-search-form" class="w-100" autocomplete="off">
                                <input id="global-search" class="form-control" type="search" placeholder="@Localizer["Search inventories and users"]" aria-label="Search" />
                            </form>
                            <div id="global-search-results" class="dropdown-menu w-100 shadow" style="max-height:60vh; overflow:auto;"></div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @Localizer["Language"]
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Content($"/set-language?culture=en&returnUrl={Uri.EscapeDataString(Context.Request.Path + Context.Request.QueryString)}")">English</a></li>
                                <li><a class="dropdown-item" href="@Url.Content($"/set-language?culture=ru&returnUrl={Uri.EscapeDataString(Context.Request.Path + Context.Request.QueryString)}")">Русский</a></li>
                            </ul>
                        </div>
                        <button id="theme-toggle" class="btn btn-outline-secondary btn-sm" type="button" aria-label="Toggle theme"
                                data-title-light="@Localizer["Switch to light theme"]"
                                data-title-dark="@Localizer["Switch to dark theme"]">
                            <span id="theme-toggle-icon" aria-hidden="true"></span>
                        </button>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            const lightIcon = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lightbulb" viewBox="0 0 16 16">\n  <path d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13a.5.5 0 0 1 0 1 .5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1 0-1 .5.5 0 0 1 0-1 .5.5 0 0 1-.46-.302l-.761-1.77a2 2 0 0 0-.453-.618A5.98 5.98 0 0 1 2 6m6-5a5 5 0 0 0-3.479 8.592c.263.254.514.564.676.941L5.83 12h4.342l.632-1.467c.162-.377.413-.687.676-.941A5 5 0 0 0 8 1"/>\n</svg>';
            const darkIcon = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lightbulb-off" viewBox="0 0 16 16">\n  <path fill-rule="evenodd" d="M2.23 4.35A6 6 0 0 0 2 6c0 1.691.7 3.22 1.826 4.31.203.196.359.4.453.619l.762 1.769A.5.5 0 0 0 5.5 13a.5.5 0 0 0 0 1 .5.5 0 0 0 0 1l.224.447a1 1 0 0 0 .894.553h2.764a1 1 0 0 0 .894-.553L10.5 15a.5.5 0 0 0 0-1 .5.5 0 0 0 0-1 .5.5 0 0 0 .288-.091L9.878 12H5.83l-.632-1.467a3 3 0 0 0-.676-.941 4.98 4.98 0 0 1-1.455-4.405zm1.588-2.653.708.707a5 5 0 0 1 7.07 7.07l.707.707a6 6 0 0 0-8.484-8.484zm-2.172-.051a.5.5 0 0 1 .708 0l12 12a.5.5 0 0 1-.708.708l-12-12a.5.5 0 0 1 0-.708"/>\n</svg>';

            const setTheme = (theme) => {
                document.documentElement.setAttribute('data-bs-theme', theme);
                localStorage.setItem('theme', theme);
                const icon = document.getElementById('theme-toggle-icon');
                if (icon) icon.innerHTML = theme === 'dark' ? darkIcon : lightIcon; // dark theme => dark icon
                const btn = document.getElementById('theme-toggle');
                const titleLight = btn?.dataset.titleLight || 'Switch to light theme';
                const titleDark = btn?.dataset.titleDark || 'Switch to dark theme';
                if (btn) btn.setAttribute('title', theme === 'dark' ? titleLight : titleDark);
            };

            const current = document.documentElement.getAttribute('data-bs-theme') || 'light';
            setTheme(current);

            const toggleBtn = document.getElementById('theme-toggle');
            if (toggleBtn) {
                toggleBtn.addEventListener('click', function () {
                    const currentTheme = document.documentElement.getAttribute('data-bs-theme') === 'dark' ? 'dark' : 'light';
                    setTheme(currentTheme === 'dark' ? 'light' : 'dark');
                });
            }

            // Respond to system theme changes when user hasn't set a preference
            if (!localStorage.getItem('theme') && window.matchMedia) {
                const media = window.matchMedia('(prefers-color-scheme: dark)');
                media.addEventListener('change', (e) => {
                    setTheme(e.matches ? 'dark' : 'light');
                });
            }
        })();
    </script>

    <script>
        // Global fuzzy search (inventories + users)
        (function () {
            const input = document.getElementById('global-search');
            const results = document.getElementById('global-search-results');
            const form = document.getElementById('global-search-form');
            if (!input || !results || !form) return;

            let abortCtrlUsers = null;
            let abortCtrlInv = null;

            const debounce = (fn, ms) => {
                let t = null;
                return (...args) => {
                    if (t) clearTimeout(t);
                    t = setTimeout(() => fn(...args), ms);
                };
            };

            function hide() {
                results.classList.remove('show');
                results.innerHTML = '';
            }

            function render(inv, users) {
                results.innerHTML = '';
                let any = false;

                if (inv && inv.length) {
                    any = true;
                    const header = document.createElement('h6');
                    header.className = 'dropdown-header text-uppercase text-muted';
                    header.textContent = 'Inventories';
                    results.appendChild(header);
                    for (const i of inv) {
                        const a = document.createElement('a');
                        a.className = 'dropdown-item';
                        a.href = '/Inventory/Details?guid=' + encodeURIComponent(i.guid);
                        const tagsHtml = (i.matchedTags && i.matchedTags.length) ? (`<div class="mt-1">` + i.matchedTags.slice(0,5).map(t => `<span class="badge bg-secondary me-1 small">${escapeHtml(t)}</span>`).join('') + `</div>`) : '';
                        a.innerHTML = `<div class="fw-semibold text-truncate">${escapeHtml(i.title)}</div>` +
                                      `<div class="small text-muted text-truncate">${escapeHtml((i.description||'').toString())}</div>` +
                                      tagsHtml;
                        results.appendChild(a);
                    }
                    const divider = document.createElement('div');
                    divider.className = 'dropdown-divider';
                    results.appendChild(divider);
                }

                if (users && users.length) {
                    any = true;
                    const header = document.createElement('h6');
                    header.className = 'dropdown-header text-uppercase text-muted';
                    header.textContent = 'Users';
                    results.appendChild(header);
                    for (const u of users) {
                        const a = document.createElement('a');
                        a.className = 'dropdown-item';
                        a.href = '/Users/Details?id=' + encodeURIComponent(u.guid);
                        const name = [u.firstName, u.lastName].filter(Boolean).join(' ');
                        a.innerHTML = `<div class="fw-semibold text-truncate">${escapeHtml(name || u.email || '')}</div>` +
                                      (u.email ? `<div class="small text-muted text-truncate">${escapeHtml(u.email)}</div>` : '');
                        results.appendChild(a);
                    }
                }

                if (any) {
                    results.classList.add('show');
                } else {
                    hide();
                }
            }

            function escapeHtml(s) {
                return s.replace(/[&<>"']/g, c => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;','\'':'&#39;'}[c]));
            }

            async function query(term) {
                if (abortCtrlInv) abortCtrlInv.abort();
                if (abortCtrlUsers) abortCtrlUsers.abort();
                abortCtrlInv = new AbortController();
                abortCtrlUsers = new AbortController();

                const invUrl = `/api/search/inventories?query=${encodeURIComponent(term)}`;
                const usrUrl = `/api/search/users?query=${encodeURIComponent(term)}`;

                try {
                    const [invRes, usrRes] = await Promise.all([
                        fetch(invUrl, { signal: abortCtrlInv.signal }),
                        fetch(usrUrl, { signal: abortCtrlUsers.signal })
                    ]);
                    if (!invRes.ok || !usrRes.ok) { hide(); return; }
                    const inv = await invRes.json();
                    const users = await usrRes.json();
                    render(inv, users);
                } catch (e) {
                    // aborted or failed
                }
            }

            const onChange = debounce(() => {
                const term = (input.value || '').trim();
                if (term.length === 0) { hide(); return; }
                query(term);
            }, 200);

            input.addEventListener('input', onChange);
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                const first = results.querySelector('.dropdown-item');
                if (first) window.location.href = first.getAttribute('href');
            });

            input.addEventListener('focus', () => {
                if (results.children.length) results.classList.add('show');
            });

            document.addEventListener('click', (e) => {
                if (!results.contains(e.target) && e.target !== input) {
                    hide();
                }
            });

            input.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') hide();
            });
        })();
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
